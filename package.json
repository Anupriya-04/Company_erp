{
  "name": "company-erp",
  "version": "0.1.0",
  "private": true,
  "main": "electron.js",
  "homepage": ".",

  "description": "Company ERP Desktop Application",
  "author": "Your Name",
  "dependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "concurrently": "^8.x",
    "cross-env": "^7.x",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.8.2",
    "react-scripts": "^5.0.1",
    "wait-on": "^7.x",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
  "start": "react-scripts start",
  "react-build": "react-scripts build",
 "test": "react-scripts test",
  "eject": "react-scripts eject",
  "electron-start": "npx electron .",
  "electron-dev": "cross-env ELECTRON_START_URL=http://localhost:3000 concurrently \"npm run react-start\" \"wait-on http://localhost:3000 && electron .\"",
  "electron-pack": "npm run react-build && electron-builder"
},

  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@electron/packager": "^18.4.4",
    "concurrently": "^9.2.1",
    "cross-env": "^10.0.0",
    "electron": "^38.1.0",
    "electron-builder": "^26.0.12",
    "electron-packager": "^17.1.2",
    "wait-on": "^8.0.4"
  },
  "build": {
    "appId": "com.company.erp",
    "productName": "Company ERP",
    "directories": {
      "output": "dist"
    },
    "files": [
       "build/**",
      "build/**/*",
      "electron.js"
    ],
     "mac": {
    "target": "dmg"
  },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    }
  }
}
